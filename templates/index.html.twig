{% extends "base.html.twig" %}

{% block title %} Page d'accueil du site {% endblock %}

{% block body %} 

    <div class="container">
        {% for product in products %}
                
        <div class="row">
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/img/{{product.img}}" alt={{product.name}} width="500">
                    <div class="card-body">
                        <h5 class="card-title">{{product.name}}</h5>
                        <p class="card-text">{{product.price}}</p>
                        <a href="{{ path('vueProduit', {id:product.id,slug:product.slug})}}" class="btn btn-primary"> Voir d√©tail </a>
                    </div>
                </div>
            </div>
        </div>
                
        {% endfor %}
    </div>

{% endblock %}