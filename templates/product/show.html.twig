{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .container { margin: auto; text-align: center; }
    
</style>

<div class="container">
    
    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/img/{{product.img}}" alt="DÃ©t" width="500">
                <div class="card-body">
                    <h5 class="card-title">{{product.name}}</h5>
                    <p class="card-text">{{product.price}}</p>
                </div>
                {% if is_granted ('ROLE_STAFF') %}
                <a class="btn btn-info" href="{{path('admin_editProduct', {id:product.id,slug:product.slug})}}">Editer</a>  
                {% endif %}

                <a class="btn btn-primary" href="{{ path('addToCart', {id:product.id}) }}"> Ajouter au panier</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
