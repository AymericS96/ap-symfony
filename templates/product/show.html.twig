{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .container { margin: auto; text-align: center; }
    
</style>

<div class="container">
    
    {{product.name}} / {{product.price}} / {{product.slug}} <br>
    <a href="{{path('editProduct',{'id':product.id})}}"> Editer le produit </a> <br>
    <a href="{{path('deleteProduct',{'id':product.id})}}"> Supprimer le produit </a>
</div>
{% endblock %}
