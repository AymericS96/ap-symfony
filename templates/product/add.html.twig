{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    
    {{ form_start(form)}}

    {{ form_row(form._token) }}

    {{ form_label(form.name,'Nom produit') }}
    {{ form_widget(form.name,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.price,'Prix produit') }}
    {{ form_widget(form.price,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.img,'Image') }}
    {{ form_widget(form.img,{'attr':{'maxlength':'255'}}) }}

    {{ form_label(form.category,'Cat√©gorie') }}
    {{ form_widget(form.category)}}

    {{ form_label(form.save,'Ajouter produit') }}
    {{ form_widget(form.save) }}

    {{ form_end(form, {'render_rest': false}) }}

</div>
{% endblock %}
